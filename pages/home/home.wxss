.slide{
    width: 100%;
    height: 560rpx;
}
.slide swiper{
  height: 560rpx;
}
.list{
  width: 90%;
  height: 180rpx;
  position: relative;
  border-bottom: 1rpx solid #e6e6e6;
}
.list::after{
  content: "";
  display: block;
  clear: both;
}
.list:last-of-type{
  border-bottom:none;
}
.list image{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  right: 0;
  top: 50rpx;
}
.list view{
  width: 400rpx;
  font-size: 24rpx;
}
.list .classify{
  margin-top: 60rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.list .classify text{
  font-size: 24rpx;
  background: #e06e11;
  padding: 0 8rpx;
  color: white;
}